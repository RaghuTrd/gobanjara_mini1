
  <h1 style='font-size:50px;text-align:center'> Account </h1>


<div class="md:px-6 lg:px-12 xl:px-16 2xl:px-48 py-8 md:py-12 lg:py-20 flex">
    {% render 'customer-navs' %}
    <div class="px-4 md:px-8 xl:px-16 2xl:px-24 w-full md:w-5/6">
        <div class="mb-16">
            <h4  style="color:#1F493E;font-weight:300" class="text-2xl font-medium mb-3">{{ 'customer.account.details' | t }}</h4>

            <div class="flex border-b border-color-border py-5">
                <div class="w-1/3">
                    {{ 'customer.account.name' | t }}
                </div>
                <div class="w-2/3">
                    <span class="text-color-secondary">{{ customer.name }}</span>
                </div>
            </div>
            <div class="flex border-b border-color-border py-5">
                <div class="w-1/3">
                    {{ 'customer.account.email' | t }}
                </div>
                <div class="w-2/3">
                    <span class="text-color-secondary">{{ customer.email }}</span>
                </div>
            </div>
          <div class="flex border-b border-color-border py-5">
                <div class="w-1/3">
                    <span class="text-color-secondary">Phone</span>
                </div>
                <div class="w-2/3">
                    <span class="text-color-secondary">{{ customer.phone }}</span>
                </div>
            </div>
        </div>
    </div>
</div>


